# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ornelle_db

# JWT Authentication
WorkspaceSecret=your_workspace_secret_key_change_this_in_production
UserSecret=your_user_secret_key_change_this_in_production

# Server Configuration
PORT=3001
HOST=localhost
NODE_ENV=development

# Redis Configuration (for caching and rate limiting)
KvStorageOptions={"url": "", "driver": "redis"}

# File Storage Configuration
# Options: "local" or "aws"
Storage={"provider":"local"}

# For AWS S3/CloudFront (uncomment and configure if using AWS)
# Storage={"provider":"aws","aws":{"Bucket":"your-bucket-name","Region":"your-region","S3AccessKey":"your-access-key","S3SecretKey":"your-secret-key","CloudFrontPrivateKey":"your-private-key","CloudFrontKeyPairId":"your-key-pair-id","CloudFrontDomain":"your-cloudfront-domain"}}

# Application URLs
PagesUrl=http://localhost:4321
ServerUrl=http://localhost:3001
DOMAIN=localhost
ADMIN_URL=http://localhost:5173

# Email Configuration
# SendGrid API key for email sending
SENDGRID_API_KEY=your_sendgrid_api_key

# Encryption Keys
# Used for securing sensitive data
Keys={"pages":"your-encryption-key"}

# Email Service Configuration
EmailServiceConfig={"providerName": "sendgrid", "providerConfig": {"apikey": "your-api-key", "subdomain": "your-subdomain"}}