# Database Configuration
DATABASE_URL="postgresql://username:@localhost:5432/ornelle-ats?schema=public"

# Server Configuration
PORT=3001
NODE_ENV=development
HOST=localhost

# Redis Configuration
KvStorageOptions={"url": "", "driver": "redis"}

# JWT Authentication
UserSecret=your_user_secret_key_change_this_in_production
WorkspaceSecret=your_workspace_secret_key_change_this_in_production

# Domain Configuration
DOMAIN=localhost
ADMIN_URL=http://localhost:5173
PagesUrl=http://localhost:4321
ServerUrl=http://localhost:3001

# API Keys
OpenRouterKey=your_openrouter_api_key
GoogleApiKey=your_google_api_key
FASTIFY_AUTOLOAD_TYPESCRIPT=1

# Encryption Keys
Keys={"pages":"your-encryption-key"}

# Integration Configurations
Zoom={"clientSecret": "your_zoom_client_secret", "clientId": "your_zoom_client_id"}
Google={"clientSecret": "your_google_client_secret", "clientId": "your_google_client_id"}

# Email Configuration
EmailServiceConfig={"providerName": "sendgrid", "providerConfig": {"apikey": "your_sendgrid_api_key"}, "subdomain": "mails"}

# File Storage Configuration
Storage={"provider":"local"}

