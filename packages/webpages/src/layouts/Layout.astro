    font-family: "Tex Gyre Heros";
    font-style: normal;
    font-weight: 700;
    font-display: swap;
    src: url("/fonts/texgyreheros-bold.ttf") format("woff2");
  }

  @font-face {
    font-family: "Satoshi";
    src: url("/fonts/Satoshi-Variable.ttf") format("woff2");
